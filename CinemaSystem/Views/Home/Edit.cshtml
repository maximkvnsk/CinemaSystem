@model CinemaSystem.Models.Movie
@{
    ViewBag.Title = "Редактирование фильма";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.MovieId">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Имя</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Director" class="control-label">Режиссер</label>
        <input type="text" asp-for="Director" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cast" class="control-label">В ролях</label>
        <input type="text" asp-for="Cast" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Duration" class="control-label">Длительность</label>
        <input type="number" asp-for="Duration" class="form-control" />
    </div>
    <label asp-for="MovieRating" class="control-label">Возрастной рейтинг</label>
    <select asp-for="MovieRating" asp-items="ViewBag.vm"></select>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>